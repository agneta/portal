<div media-item
  ng-show="object"
  class="media-tile"
  ng-class="{selected:object.selected}"
  layout="row"
  layout-margin
  layout-align="start center">

  <div ng-if="object.image"
    class="image"
    style="background-image:url({{get_media(object.image,'thumbnail')}})">
  </div>

  <md-icon ng-if="!object.image"
    md-svg-src="{{get_icon('material/'+(object.type=='folder'?'folder':'insert-drive-file'))}}">
  </md-icon>

  <div layout="column">
    <span class="title">{{object.title}}</span>
    <span class="info">{{object.subtitle}}</span>
    <div ng-if="object.metadata"
      class="metadata"
      layout="row"
      layout-wrap>
      <div class="item"
        ng-repeat="data in object.metadata">
        {{data.value}}
      </div>
    </div>
  </div>

</div>