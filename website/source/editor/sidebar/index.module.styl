#site-menu {
	width: 420px;

	.search-list {
		background: color-grey;
		padding: 0 18px;

		input {
			background: transparent;
			margin: 0;
			padding: 18px;

			.md-errors-spacer {
				display: none;
			}
		}
	}

	.media-tile {
		.info {
			color: gray;
			font-size: 0.8em;
		}

		.image {
			width: 50px;
			height: 50px;
			border-radius: 100%;
			background-position: center;
			background-size: cover;
		}

		.metadata {
			.item {
				background: #7791e0;
				color: white;
				padding: 2px 6px;
				border-radius: 2px;
				margin-top: 4px;
				margin-right: 4px;
			}
		}
	}

	.page-header {
		border-bottom: dashed 1px #cccccc;
		padding: 10px;

		.md-icon-button {
			background: whitesmoke;
		}
	}

	.ui-tabs {
		height: 100%;

		>.header {
			box-shadow: 0 4px 4px #b1b1b1;
			padding: 7px 0;
		}

		>.tab-content {
			height: 100%;

			>.list {
				height: 100%;
			}
		}
	}

	.highlighted {
		font-weight: bold;
		color: black;
	}

	.log {
		md-list-item {
			padding: 10px 0;

			.time {
				color: color-primary;
				font-weight: bold;
			}

			.message {
				white-space: pre-line;
				line-height: 1.5em;
			}

			p {
				margin: 0;
			}
		}
	}
}
